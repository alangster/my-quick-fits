<!DOCTYPE html>
<html>
  <head>
    <title>CameraTest</title>
    <%= stylesheet_link_tag    'application', media: 'all'%>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, maximum-scale=1.0">
    <link rel="apple-touch-icon" href="">
  </head>
  <body>

    <div class="navbar navbar-inverse navbar-fixed-top layout-header">
    	<div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand logo" href="#">QuickFits</a>
      </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <% if current_user %>
              <li><button class="btn btn-default navbar-btn"><%= link_to "Home", current_user %></button></li>
              <li><button class="btn btn-default navbar-btn"><%= link_to "Wardrobe", current_wardrobe %></button></li>
              <li><button class="btn btn-default navbar-btn"><%= link_to "Log Out", logout_path %></button></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>

    <div class="container-fluid">
      <div class="row">
    <%= yield %>
      </div>
    </div>

  </body>
</html>

