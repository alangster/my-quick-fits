<div class="page-header">
	<h1>Welcome, <%= current_user.first_name %>!</h1>
</div>

<div class="row show-row">
	<% if current_wardrobe.articles.count == 0 %>
		<%= link_to "Start Adding Your Clothes", new_article_path, :class => "btn btn-default btn-lg" %>
	<% else %>
	<div class="add-item items col-md-4">
		<%= link_to "Add Item", new_article_path, :class => "btn btn-default btn-lg" %>
			<!-- <img src="/empty-hanger.svg" height="48px" width="48px"> -->
	</div>
	<div class="make-outfit items col-md-4">
		<%= link_to "Make Outfit", new_outfit_path, :class => "btn btn-default btn-lg" %>
		<% if flash[:notice] %><h3><%= flash[:notice] %></h3><% end %>	<!-- <img src="/make-outfit.svg" height="48px" width="40px"> -->
	</div>
	<div class="see-wardrobe items col-md-4">
		<%= link_to "See Wardrobe", wardrobe_path(current_wardrobe), :class => "btn btn-default btn-lg" %>
			<!-- <img src="/full-hanger.svg" height="48px" width="48px"> -->
	</div>
	<% end %>
</div>

<style type="text/css">
  body {
    background-image: url(/fresh_snow.png);
  }
</style>