<div class="isotope">
  <div class="item" id="<%= @article.id %>" style="<%= @article.render_gradient %>">
    <%= image_tag("#{@article.get_icon_name}", class: "category-image") %>
    <%= @article.category.name %>
  </div>
</div>
<div id="color-wheels">
	<div id="primary-color-wheel"></div>
	<div id="secondary-color-wheel"></div>
	<div id="tertiary-color-wheel"></div>
</div>
<table>
	<tr>
		<th colspan=2>Stats</th>
	</tr>
	<tr>
		<td>Wear Count</td><td><%= @article.times_worn %></td>
	</tr>
	<tr>
		<td>Date Added</td><td><%= @article.created_at.strftime("%B %d, %Y") %></td>
	</tr>
</table>
 <%= form_for @article do |f| %>
	<input type="hidden" name="primary-hex" value="<%= @article.primary_color_hex %>">	
	<input type="hidden" name="secondary-hex" value="<%= @article.secondary_color_hex %>">	
	<input type="hidden" name="tertiary-hex" value="<%= @article.tertiary_color_hex %>">	
	<%= f.label :condition %></br>
	<%= f.text_field :condition %></br>
 	<%= f.submit %>
 <% end %>

<style type="text/css">
  body {
    background-image: url(/fresh_snow.png);
  }
</style>
