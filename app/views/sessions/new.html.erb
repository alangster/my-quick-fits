<div class="row">
	<div class="col-md-3-offset-3">
	  <div class="new-form">
			<%= form_tag login_path, class: "form-horizontal", role: "form" do %>
		  <div class="form-group">
				<%= label_tag :email, "Email" %></br>
				<%= email_field_tag :email %>
		  </div>
		  <div class="form-group">
				<%= label_tag :password, "Password" %></br>
				<%= password_field_tag :password %>
		  </div>
		  <div class="form-buttons">
				<%= submit_tag "Login" %>
				<% end %>
				<button><%= link_to "Join Us", new_user_path %></button>
			</div>
		</div>
	</div>
</div>

<style type="text/css">
	body { 
	  background: url(menswear.jpg) no-repeat center center fixed; 
	  -webkit-background-size: cover;
	  -moz-background-size: cover;
	  -o-background-size: cover;
	  background-size: cover;
	}
</style>