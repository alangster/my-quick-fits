<div class="row">
  <div class="col-md-3-offset-3">
    <div id="filters" class="button-group">  
      <button class="button is-checked" data-filter="*">All Clothes</button>
      <button class="button" data-filter="top">Tops</button>
      <button class="button" data-filter="bottom">Bottoms</button>
      <button class="button" data-filter="shoes">Shoes</button>
    </div>
  </div>
</div>
<div class="row">
  <div id="analysis-link">
    <%= link_to "Analyze", analysis_path, :class => "analysis" %>
  </div>
</div>
<div class="row">
  <div class="isotope col-lg-12">
    <% @tops.each do |top| %>
      <%= link_to top do %>
        <div class="item <%= top.category.type_of %>">
          <div class="pega  <%= top.primary_color %>" style="<%= top.render_gradient %>">
            <%= image_tag("#{top.get_icon_name}", class: "category-image") %>
          </div>
          <div class="caption">
            <p><%= top.category.name %></p>
          </div>
        </div>
      <% end %>
    <% end %>
    <% @bottoms.each do |bottom| %>
      <%= link_to bottom do %>
        <div class="item <%= bottom.category.type_of %> <%= bottom.primary_color %>" style="<%= bottom.render_gradient %>">
          <%= image_tag("#{bottom.get_icon_name}", class: "category-image") %>
          <p><%= bottom.category.name %></p>
        </div>
      <% end %>
    <% end %>
    <% @shoes.each do |shoe| %>
      <%= link_to shoe do %>
      <div class="item <%= shoe.category.type_of %> <%= shoe.primary_color %>" style="<%= shoe.render_gradient %>">
        <%= image_tag("#{shoe.get_icon_name}", class: "category-image") %>
          <p><%= shoe.category.name %></p>
      </div>
      <% end %>
    <% end %>
  </div>
</div>

<style type="text/css">
  body {
    background-image: url(/fresh_snow.png);
  }
</style>
