<div class="isotope">
  <% @tops.each_with_index do |top, index| %>
  <div class="item col-xs-12" id="<%= top.id %>" style="<%= top.render_gradient %>">
    <%= image_tag("#{top.get_icon_name}", class: "category-image") %>
    <%= @top_names[index] %>
  </div>
  <% end %>
  <div class="item col-xs-12" id="<%= @bottom.id %>" style="<%= @bottom.render_gradient %>">
    <%= image_tag("#{@bottom.get_icon_name}", class: "category-image") %>
    <%= @bottom_name %>
  </div>
  <div class="item col-xs-12" id="<%= @shoes.id %>" style="<%= @shoes.render_gradient %>">
    <%= image_tag("#{@shoes.get_icon_name}", class: "category-image") %>
    <%= @shoes_name %>
  </div>
</div>

<%= form_for @outfit do |f| %>
  <% @tops.each do |top| %>
    <input type="hidden" id="top_<%= top.id %>" name="top[id][]" value="<%= top.id %>" />
  <% end %>
  <input type="hidden" id="bottom_<%= @bottom.id %>" name="bottom[id]" value="<%= @bottom.id %>" />
  <input type="hidden" id="shoes_<%= @shoes.id %>" name="shoes[id]" value="<%= @shoes.id %>" />

  <%= f.button "Like", id: "like-outfit", class: "like" %>
  <%= f.button "Dislike", id: "dislike-outfit", class: "dislike" %>
  <%= f.submit "Create", class: "create" %>
<% end %>

<% if @outfit_issues != "" %>
<div class="outfit-issues">  
  <%= @outfit_issues %>
</div>
<% end %>
